{
  "name": "@arcgis/cli",
  "version": "4.21.0",
  "description": "CLI to scaffold ArcGIS API for JavaScript applications",
  "main": "dist/index.js",
  "bin": {
    "arcgis": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esri/arcgis-js-cli.git"
  },
  "keywords": [
    "esri",
    "arcgis",
    "cli"
  ],
  "scripts": {
    "prepare": "npm run -s build",
    "clean": "rimraf dist",
    "test": "npm run clean && jest --coverage",
    "build": "npm run clean && npm run tsc && babel src --out-dir dist --extensions \".ts\" -D --ignore '*.test.ts,**/__mocks__/'&& cpy --parents preview/ dist/",
    "dev": "npm run clean && npm run build && jest --watch",
    "tsc": "tsc",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "files": [
    "dist",
    "templates"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/templates/"
    ]
  },
  "author": "Rene Rubalcava <rrubalcava@esri.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/browser-sync": "^2.26.2",
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^2.1.3",
    "@types/fibers": "^3.1.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@types/pify": "^5.0.1",
    "@types/sass": "^1.16.1",
    "@types/yargs": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-empty-function": 0
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true
  },
  "dependencies": {
    "arcgis-js-api": "^4.20.2",
    "browser-sync": "^2.27.5",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "core-js": "^3.18.0",
    "cpy": "^8.1.2",
    "cross-spawn-promise": "^0.10.2",
    "del": "^6.0.0",
    "fibers": "^5.0.0",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.1.5",
    "lodash.camelcase": "^4.3.0",
    "lodash.startcase": "^4.4.0",
    "ora": "^6.0.1",
    "pify": "^5.0.0",
    "pkg-dir": "^5.0.0",
    "ramda": "^0.27.1",
    "recursive-copy": "^2.0.13",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "tslib": "^2.3.1",
    "watch": "^1.0.2",
    "yargs": "^17.1.1"
  }
}
